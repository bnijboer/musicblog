<%- include("partials/header") %>

<div class="container">
      <div class="row">
            <div class="col-lg-12">
                  <h1>New post</h1>
            </div>
      </div>
      <div class="row">
            <div class="col-lg-12">
                  <form action="/posts" method="POST">
                        <input type="text" name="title" placeholder="Enter post title">
                        <input type="text" name="link" placeholder="Paste embedded link">
                        <textarea class="edit-field" type="text" name="content" placeholder="Type content"></textarea>
                        <button class="btn btn-success">Post</button>
                  </form>
            </div>
      </div>
</div>

<a href="/posts">Go back</a>

