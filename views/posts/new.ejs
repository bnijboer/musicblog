<%- include("../partials/header") %>

<div class="container">

      <div class="post">
            <form action="/posts" method="POST">
                  <div class="content">
                        <input class="form" type="text" name="title" placeholder="Enter post title">
                  </div>
                  <hr>
                  <div class="content">
                        <input class="form" type="text" name="link" placeholder="Paste embedded link">
                  </div>
                  <hr>
                  <div class="content">
                        <textarea class="form" type="text" name="content" placeholder="Type content"></textarea>
                  </div>
                  <hr>
                  <div class="content">
                        <input class="form" type="text" name="tags" placeholder="Add style(s)">
                  </div>
                  <div class="d-flex justify-content-end btn-container">
                        <button class="btn btn-outline-success form-btn">Post</button>
                  </div>
            </form>
      </div>
</div>

<%- include("../partials/footer") %>