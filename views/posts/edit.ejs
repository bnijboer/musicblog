<%- include("../partials/header") %>

<div class="container">
      <div class="post">
            <form action="/posts/<%= post._id %>?_method=PUT" method="POST">
                  <div class="content">
                        <input class="form" type="text" name="title" value="<%= post.title %>">
                  </div>
                  <hr>
                  <div class="content">
                        <input class="form" type="text" name="link" value="<%= post.link %>">
                  </div>
                  <hr>
                  <div class="content">
                        <textarea class="form" type="text" name="content"><%= post.content %></textarea>
                  </div>
                  <hr>
                  <div class="content">
                        <input class="form" type="text" name="tags" value="<%= post.tags %>">
                  </div>
                  <div class="d-flex justify-content-between btn-container">
                        <button class="btn btn-outline-secondary form-btn" href="/posts/<%= post._id %>">Back</button>                      
                        <button class="btn btn-outline-info form-btn">Update</button>
                  </div>
            </form>
      </div>
</div>

<%- include("../partials/footer") %>