<%- include("partials/header") %>

<div class="container">
      <div class="row justify-content-center">
            <div class="col-12-lg">
                  <h1>Blog post overview</h1>
            </div>
      </div>
      <% for(var i = posts.length-1; i >= 0; i--){ %>
            <div class="blog-post">
                  <div class="blog-post-title">
                        <h2><%= posts[i].title %></h2>
                  </div>
                  <hr>
                  <div class="blog-post-link">
                        <%- posts[i].link %>
                  </div>
                  <hr>
                  <div class="blog-post-description">
                        <%- posts[i].content.substring(0, 100) %>...
                  </div>
                  <div class="blog-post-description">
                        <a href="/posts/<%= posts[i]._id %>">View post</a>
                  </div>
                  <hr>
                  <div class="blog-post-tags">
                        Style: <%- posts[i].tags %>
                  </div>
            </div>
      <% } %>
      <div class="d-flex justify-content-around button-wrapper">
            <button type="button" class="btn btn-dark btn-sm form-btn">Previous</button>
            <button type="button" class="btn btn-dark btn-sm form-btn">Next</button>
      </div>
</div>


<%- include("partials/footer") %>