<%- include("partials/header") %>


<div class="container">
      <div class="post">
            <div class="content">
                  <h2><%= post.title %></h2>
            </div>
            <hr>
            <div class="content">
                  <%- post.link %>
            </div>
            <hr>
            <div class="content desc">
                  <pre><%- post.content %></pre>
            </div>
            <hr>
            <div class="content tags">
                  Style: <%- post.tags %>
            </div>
            <div class="d-flex justify-content-between btn-container">
                  <button class="btn btn-outline-secondary form-btn" onclick="window.history.go(-1);">Back</button>
                  <% if(currentUser){ %>
                        <form action="/posts/<%= post._id %>/edit" method="GET">
                              <button class="btn btn-outline-warning form-btn">Edit</button>
                        </form>
                        <form action="/posts/<%= post._id %>?_method=DELETE" method="POST">
                              <button class="btn btn-outline-danger form-btn" onclick="return confirm('Are you sure you want to delete this post?');">Delete</button>
                        </form>
                  <% } %>
            </div>
      </div>
</div>

<%- include("partials/footer") %>