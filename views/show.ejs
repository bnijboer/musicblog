<%- include("partials/header") %>

<div class="container">
      <div class="blog-post">
            <div class="blog-post-title">
                  <h2><%= post.title %></h2>
            </div>
            <hr>
            <div class="blog-post-link">
                  <%- post.link %>
            </div>
            <hr>
            <div class="blog-post-description">
                  <%- post.content %>
            </div>
            <hr>
            <div class="blog-post-tags">
                  Style: <%- post.tags %>
            </div>
            <div class="d-inline-flex justify-content-between button-wrapper">
                  <a class="btn btn-outline-secondary form-btn" href="/posts">Back</a>
                  <% if(currentUser){ %>
                        <form action="/posts/<%= post._id %>/edit" method="GET">
                              <button class="btn btn-outline-warning form-btn">Edit</button>
                        </form>
                        <form action="/posts/<%= post._id %>?_method=DELETE" method="POST">
                              <button class="btn btn-outline-danger form-btn" onclick="return confirm('Are you sure you want to delete this post?');">Delete</button>
                        </form>
                  <% } %>
            </div>
      </div>
</div>

<%- include("partials/footer") %>